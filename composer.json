{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:superbiaweb/foreman.git"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:superbiaweb/terminator"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:superbiaweb/speedrunner"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.3.0",
    "johnpbloch/wordpress": "4.9.8",
    "wpackagist-plugin/limit-login-attempts": "1.7.1",
    "wpackagist-plugin/wordpress-seo": "8.0.0",
    "superbia/terminator": "0.1.0",
    "superbia/speedrunner": "0.5.0"
  },
  "require-dev": {
    "wpackagist-plugin/query-monitor": "3.1.0",
    "stevegrunwell/wp-enforcer": "^0.5.0"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/app/plugins/{$name}/": ["type:wordpress-plugin"]
    },
    "wordpress-install-dir": "public/wp"
  },
  "scripts": {
    "post-install-cmd": [
      "wp-enforcer"
    ],
    "post-update-cmd": [
      "wp-enforcer"
    ]
  }
}
