<?xml version="1.0"?>
<ruleset name="Wordpress Bootstrap">
	<description>Wordpress Bootstrap PHP Coding Standards</description>

	<!-- Scan all files in directory -->
	<file>.</file>

	<!-- Ignore WordPress, Plugins and Composer dependencies -->
	<exclude-pattern>phpcs.xml</exclude-pattern>
	<exclude-pattern>public/wp</exclude-pattern>
	<exclude-pattern>public/app/plugins</exclude-pattern>
	<exclude-pattern>public/app/themes/twentyseventeen</exclude-pattern>
	<exclude-pattern>vendor/</exclude-pattern>

	<rule ref="Internal.NoCodeFound">
		<severity>0</severity>
	</rule>

	<rule ref="Generic.Functions.FunctionCallArgumentSpacing.TooMuchSpaceAfterComma">
		<exclude-pattern>*</exclude-pattern>
	</rule>

	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>*/src/*</exclude-pattern>
		<exclude-pattern>*/tests/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
		<exclude-pattern>*/src/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.VIP.RestrictedFunctions.get_term_link">
		<exclude-pattern>*</exclude-pattern>
	</rule>

	<rule ref="WordPress.VIP.RestrictedFunctions.get_adjacent_post">
		<exclude-pattern>*</exclude-pattern>
	</rule>

	<rule ref="WordPress-VIP" />
	<rule ref="WordPress-Docs" />

	<!-- Scan only PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Show colors in console -->
	<arg value="-colors"/>

</ruleset>
